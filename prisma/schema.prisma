// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// 你的博客文章模型
model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String   @db.Text
  category  String
  createdAt DateTime @default(now())
}